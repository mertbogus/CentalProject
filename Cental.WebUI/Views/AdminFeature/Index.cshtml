@model List<ResultFeatureDto>
@{
    ViewData["Title"] = "Feature Listesi";
    Layout = "~/Views/AdminLayout/Layout.cshtml";
    int count = 0;
}
<div class="alert alert-warning lead" role="alert">
    4'den Fazla Giriş Yapmayınız. Anasayfa da Görünümde Problemlere Yol Açabilir.
</div>
<table class="table table-bordered">
    <tr>
        <th>#</th>
        <th>Başlık</th>
        <th>Açıklama</th>
        <th>İcon</th>
        <th>Sil</th>
        <th>Güncelle</th>
    </tr>
    @foreach (var item in Model)
    {
        count++;
        <tr>
            <td>@count</td>
            <td>@item.Title</td>
            <td>@item.Description</td>
            <td><i class="@item.Icon"></i></td>
            <td><a asp-action="DeleteFeature" asp-route-id="@item.FeatureId" class="btn btn-danger"> <i class="fa fa-trash"></i> Sil</a></td>
            <td><a asp-action="UpdateFeature" asp-route-id="@item.FeatureId" class="btn btn-info"> <i class="fa fa-pen"></i> Güncelle</a></td>
        </tr>
    }
</table>

<a asp-action="CreateFeature" asp-controller="AdminFeature" class="btn btn-primary mt-1"><i class="fa fa-plus-circle"></i> Yeni Feature Ekle</a>

