@using Cental.WebUI.ViewModels
@model ContactSocialMediaViewModel
@*
    For more information on enabling MVC for empty projects, visit http://go.microsoft.com/fwlink/?LinkID=397860
*@

<div class="container-fluid footer py-5 wow fadeIn" data-wow-delay="0.2s">
    <div class="container py-5">
        <div class="row g-5">
            <!-- Hakkımızda Section -->
            <div class="col-md-6 col-lg-6 col-xl-5">
                <div class="footer-item d-flex flex-column">
                    <h4 class="text-white mb-4">Hakkımızda</h4>
                    @foreach (var item in Model.Contacts)
                    {
                        <p class="mb-3">@item.AboutUs</p>
                        <div class="position-relative mb-3">
                            <input class="form-control rounded-pill w-100 py-3 ps-4 pe-5" type="text" placeholder="Mailinizi Girin">
                            <button type="button" class="btn btn-secondary rounded-pill position-absolute top-0 end-0 py-2 mt-2 me-2">Abone Ol</button>
                        </div>
                    }
                </div>
            </div>

            <!-- Mesai Saatleri Section -->
            <div class="col-md-6 col-lg-6 col-xl-3">
                <div class="footer-item d-flex flex-column">
                    <h4 class="text-white mb-4">Mesai Saatleri</h4>
                    @foreach (var item2 in Model.Contacts)
                    {
                        <div class="mb-3">
                            <h6 class="text-muted mb-0">Hafta İçi</h6>
                            <p class="text-white mb-0">@item2.OpeningHours</p>
                        </div>
                        <div class="mb-3">
                            <h6 class="text-muted mb-0">Hafta Sonu</h6>
                            <p class="text-white mb-0">Cumartesi ve Pazar Günleri Kapalıyız.</p>
                        </div>
                    }
                </div>
            </div>

            <!-- İletişim Bilgileri Section -->
            <div class="col-md-6 col-lg-6 col-xl-3">
                <div class="footer-item d-flex flex-column">
                    <h4 class="text-white mb-4">İletişim Bilgileri</h4>
                    @foreach (var item3 in Model.Contacts)
                    {
                        <div class="mb-3">
                            <a href="#"><i class="fa fa-map-marker-alt me-2"></i> @item3.Address</a>
                        </div>
                        <div class="mb-3">
                            <a href="mailto:@item3.Mail"><i class="fas fa-envelope me-2"></i> @item3.Mail</a>
                        </div>
                        <div class="mb-3">
                            <a href="tel:+@item3.Telephone"><i class="fas fa-phone me-2"></i> +@item3.Telephone</a>
                        </div>
                        <div class="mb-3">
                            <a href="tel:+@item3.Telephone"><i class="fas fa-print me-2"></i> @item3.Telephone</a>
                        </div>
                    }

                    <div class="d-flex">
                        @foreach (var item in Model.Socials)
                        {
                            <a class="btn btn-secondary btn-md-square rounded-circle me-3" href="@item.SocialMediaUrl">
                                <i class="@item.SocialMediaİcon"></i>
                            </a>
                        }
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>
